/* pages/authorize/bindmobil.wxss */
page{
  height: 100%;
}
.container{
  background-color: #f3f3f3;
  justify-content: initial;
}

.form {
  background-color: #ffffff;
  padding: 0 24rpx;
  width: 100%;
  box-sizing: border-box;
}
.form-item {
  height: 96rpx;
}
.phone {
  border-bottom: 2rpx solid #f0f0f0;
}
.code-btn {
  background-color: #e1c8af;
  font-size: 24rpx;
  color: #ffffff;
  height: 52rpx;
  line-height: 52rpx;
  width: 180rpx;
  border-radius: 26rpx;
}
.code-btn.active {
  background-color: #cccccc;
}
.input {
  font-size: 30rpx;
  color: #666666;
  padding-left: 16rpx;
}
.placeholder {
  font-size: 30rpx;
  color: #cccccc;
}
.submit-pane {
  margin-top: 36rpx;
}
.submit-btn {
  width: 710rpx;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
  color:#ffffff;
  border-radius: 34rpx;
  background-color: #cccccc;
}
.submit-btn.active {
  background-color: #ffaab9;
}