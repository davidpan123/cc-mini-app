/* miniprogram/pages/login/login.wxss */
page, .scroll-view{
    height: 100%;
}
.container{
    background-color: #F2f2f2;
    justify-content: initial;
}

.top-sec{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 20rpx 16rpx;
}
.top-sec .top-sec-pane {
    padding: 40rpx 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
}
.top-sec .a-row{
    display: flex;
    font-size: 24rpx;
    line-height: 54rpx;
    color: #666666;
}
.top-sec .a-row .label{
    color: #333;
    margin-right: 28rpx;
}
.next {
  padding: 20rpx 0;
}
.money-label {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}
.money-value {
  color: #ff91a5;
  font-size: 30rpx;
  font-weight: 500;
}

.refund-process{
  width: 710rpx;
  background-color: #ffffff;
  margin-left: 20rpx;
  margin-bottom: 16rpx;
}

.refundline {
  padding: 54rpx 0 40rpx;
}
.line {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  margin-left: 108rpx;
}
.circle {
  width: 20rpx;
  height: 20rpx;
  background-color: #dcdcdc;
  border-radius: 50%;
}
.circle.active {
  background-color: #acd598;
}
.link {
  width: 217rpx;
  height: 4rpx;
  background: #dcdcdc;
}
.link.active {
  background-color: #acd598;
}
.lintext {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  margin-top: 30rpx;
  margin-left: 10rpx;
  text-align: center;
}
.link-item {
  flex: 1
}
.circle.rejected {
  background-color: #ff91a5;
}
.link.rejected {
  background-color: #ff91a5;
}
.time {
  font-size: 20rpx;
  color: #999999;
  margin-top: 12rpx;
}

