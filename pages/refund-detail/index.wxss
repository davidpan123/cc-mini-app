/* miniprogram/pages/login/login.wxss */
page, .scroll-view{
    height: 100%;
}
.container{
    background-color: #F2f2f2;
    justify-content: initial;
}

.top-sec{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
}
.top-sec .top-sec-pane {
    padding: 40rpx 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
}
.top-sec .a-row{
    display: flex;
    font-size: 24rpx;
    line-height: 54rpx;
    color: #666666;
}
.top-sec .a-row .label{
    color: #333;
    margin-right: 28rpx;
}
.next {
  padding: 20rpx 0;
}
.money-label {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}
.money-value {
  color: #ff91a5;
  font-size: 30rpx;
  font-weight: 500;
}

.refund-process{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx 20rpx;
}
.refund-process-pane {
  background-color: #fff;
  border-radius: 15rpx;
  height: 200rpx;
  position: relative;
}

/* 退款原因 */
/* 退款内容 */
.refund-pane {
  border-radius: 10rpx;
  width: 710rpx;
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.refund-reason-pane {
  padding-bottom: 20rpx;
}
.arrow-right {
  width: 20rpx;
  height: 20rpx;
  margin-left: 16rpx;
}
.refund-content-title {
  margin: 30rpx 0;
}

.qustion-pane {
  padding: 30rpx 0 30rpx 30rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
}
.qustion-area {
  width: 100%;
  height: 180rpx;
}
.qustion-placeholder {
  font-size: 24rpx;
  color: #cccccc;
}

/* 联系人 */
.person-pane {
  margin-top: 16rpx;
  border-radius: 10rpx;
  width: 710rpx;
  background-color: #ffffff;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.row-item {
  height: 84rpx;
}