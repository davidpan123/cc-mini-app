/* miniprogram/pages/login/login.wxss */
page{
    height: 100%;
}
.container{
    background-color: #f3f3f3;
    justify-content: initial;
}
.form-box{
    margin-top: 5rpx;
    width:100%;
    background-color: #fff;
    /* box-shadow: 10rpx -20rpx 5rpx 10rpx rgba(170, 170, 170, 0.4); */
}
.row-wrap{
    width: 702rpx;
    height: 96rpx;
    line-height: 96rpx;
    margin: 0 24rpx;
    border-bottom: 2rpx solid #f0f0f0;
    display: flex;
    font-size: 30rpx;
    /*justify-content: space-between;*/
}
.row-wrap .label{
    width: 160rpx;
    padding-left: 16rpx;
    font-size: 30rpx;
    color: #999;
}
.row-wrap .label-right{
    flex: 1;
    height: 96rpx;
    line-height: 96rpx;
}
.row-wrap .label-right input{
    height: 100%;
    font-size: 30rpx;
    padding-right: 16rpx;
    color: #666;
}
.arrow-right{
    width: 15rpx;
    height: 24rpx;
}
.save-btn,
.cancel-btn{
    position: absolute;
    bottom: 14rpx;
    width: 710rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;

    border-radius: 34rpx;
    box-sizing: border-box;
}
.save-btn{
    background-color: #cccccc;
    color:#fff;
}
.btn-active {
    background-color: #ffaab9;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:24rpx;
    border-bottom: 2rpx solid #f0f0f0;
    display: flex;
    font-size: 30rpx;
}
.addr-details .label{
    margin:auto 0 auto 0;
    width: 160rpx;
    padding-left: 16rpx;
    font-size: 30rpx;
    color: #999;
}
.addr-details textarea{
    box-sizing: border-box;
    width: 520rpx;
    overflow: scroll;
    color:#666;
    font-size: 30rpx;
}
picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}
.hui{
    color: #777;
}
.placeholder {
    text-align: right;
    color: #cccccc;
}