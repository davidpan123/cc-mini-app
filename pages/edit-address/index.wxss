/* miniprogram/pages/login/login.wxss */
page{
  height: 100%;
}
.container{
  background-color: #f3f3f3;
  justify-content: initial;
}
.form-box{
    width:100%;
    background-color: #fff;
}
.row-wrap{
    width: 702rpx;
    height: 96rpx;
    line-height: 96rpx;
    margin: 0 24rpx;
    border-bottom: 2rpx solid #f0f0f0;
    display: flex;
    font-size: 30rpx;
    /*justify-content: space-between;*/
}
.row-wrap .label{
    width: 160rpx;
    padding-left: 16rpx;
    font-size: 30rpx;
    color: #999;
}
.row-wrap .label-right{
    flex: 1;
    height: 96rpx;
    line-height: 96rpx;
}
.row-wrap .label-right input{
    height: 100%;
    font-size: 30rpx;
    padding-right: 16rpx;
    color: #666;
}
.arrow-right{
    width: 15rpx;
    height: 24rpx;
}
.save-btn{
    position: absolute;
    bottom: 14rpx;
    width: 710rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    border-radius: 34rpx;
    box-sizing: border-box;
    background-color: #cccccc;
    color:#fff;
}
.save-btn.btn-active {
    background-color: #ffaab9;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:24rpx;
    border-bottom: 2rpx solid #f0f0f0;
    display: flex;
    font-size: 30rpx;
}
.addr-details .label{
    margin:auto 0 auto 0;
    width: 160rpx;
    padding-left: 16rpx;
    font-size: 30rpx;
    color: #999;
}
.addr-details textarea{
    box-sizing: border-box;
    width: 520rpx;
    overflow: scroll;
    color:#666;
    font-size: 30rpx;
}
.placeholder {
  font-size: 24rpx;
  text-align: right;
  color: #cccccc;
}

/* 原因模态框 */
.show-popup{
    position: fixed;
    top: 0;
    left: 0;
    width:100%;
    height: 100%;
    z-index: 4;
  }
  .popup-mask{
    position: fixed;
    top: 0;
    left: 0;
    width:100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 5;
  }
  .popup-contents{
    position: fixed;
    left: 0;
    bottom: 0;
    width:100%;
    background-color: #fff;
    z-index: 6;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
  }

  .title {
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    font-size: 30rpx;
    color:#999999;
  }

  .addChoice {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    border-bottom: 2rpx solid #f0f0f0;
    padding-left:10rpx;
  }
  .choisce-item {
    min-width: 92rpx;
    height: 84rpx;
    padding: 0 20rpx;
    position: relative;
  }
  .choisce-item-btm {
    position: absolute;
    left: 0;
    bottom: 0;
    height: 4rpx;
    background-color: #ffaab9;
    min-width: 92rpx;
    width: 100%;
  }
  .addList {
    margin-top: 10rpx;
    font-size: 24rpx;
    overflow-y: auto;
    height: 588rpx;
    padding-left:40rpx;
  }
  .list-item {
    height: 64rpx;
    line-height: 64rpx;
  }
  .list-item.actived {
    color: #ffaab9;
  }

  .complete-pane {
    height: 96rpx;
    padding: 0 20rpx;
    display: flex;
    align-items: center;
  }
  .complete-btn {
      height: 68rpx;
      border-radius: 34rpx;
      width: 100%;
      text-align: center;
      color: #ffffff;
      line-height: 68rpx;
      background-color: #ffaab9;
  }