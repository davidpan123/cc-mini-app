<view class="container">
  <form>
    <view class="form-box">
        <view class="row-wrap">
            <view class="label">收货人</view>
            <view class="label-right">
                <input name="linkMan" class="input input-right" type="text" placeholder="请填写收货人姓名" value="{{addressData.linkMan}}" placeholder-class="placeholder"/>
            </view>
        </view>
        <view class="row-wrap">
            <view class="label">手机号码</view>
            <view class="label-right">
                <input name="mobile" class="input input-right" maxlength="11" type="number" placeholder="请填写收货人手机号码" value="{{addressData.mobile}}" placeholder-class="placeholder"/>
            </view>
        </view>
        <view class="row-wrap" bindtap="selectCity">
            <view class="label">所在地区</view>
            <!-- <picker mode="multiSelector" range="{{pickerRegionRange}}" range-key="name" value="{{pickerSelect}}" bindchange="bindchange" bindcolumnchange="bindcolumnchange">
              {{showRegionStr}}
            </picker> -->
            <!-- <view class="select-area">请选择收货人所在地区</view> -->
            <view class="label-right">
                <input name="linkArea" class="input" type="text" disabled="true" placeholder="请选择收货人所在地区" value="{{addressData.area}}" placeholder-class="placeholder" style="direction: rtl;"/>
            </view>
        </view>
        <view class="addr-details">
            <view class="label">详细地址</view>
            <view class="label-right">
                <textarea name="address" class='input-right' auto-height placeholder="请填写街道、楼门牌等信息"  value="{{addressData.address}}" placeholder-class="placeholder"/>
            </view>
        </view>
    </view>  
  </form>
  <button class="save-btn {{addressData.linkMan && addressData.mobile && addressData.area && addressData.address? 'btn-active' : ''}}">保存</button>  
</view>