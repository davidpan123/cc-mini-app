/* miniprogram/pages/login/login.wxss */
page{
    height: 100%;
}
.container{
    background-color: #F2f2f2;
    justify-content: initial;
}
/* 订单内容 */
.top-sec{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
}
.top-sec .top-sec-pane {
    padding: 40rpx 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
}
.top-sec .a-row{
    display: flex;
    font-size: 24rpx;
    line-height: 54rpx;
    color: #666666;
}
.top-sec .a-row .label{
    margin-right: 28rpx;
}
.next {
  padding: 20rpx 0;
}
.money {
  color: #333;
  font-size: 30rpx;
}

/* 退款内容 */
.refund-pane {
  border-radius: 10rpx;
  width: 710rpx;
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.arrow-right {
  width: 20rpx;
  height: 20rpx;
  margin-left: 16rpx;
}
.refund-desc {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  color: #ff91a5;
  font-size: 20rpx;
}
.refund-content-title {
  margin: 30rpx 0;
}

.qustion-pane {
  padding: 30rpx 0 30rpx 30rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
}
.qustion-area {
  width: 100%;
  height: 180rpx;
}
.qustion-placeholder {
  font-size: 24rpx;
  color: #cccccc;
}

/* 联系人 */
.person-pane {
  border-radius: 10rpx;
  width: 710rpx;
  background-color: #ffffff;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.row-item {
  height: 84rpx;
}

.save-btn{
    position: absolute;
    bottom: 14rpx;
    width: 710rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    border-radius: 34rpx;
    box-sizing: border-box;
    background-color: #ffaab9;
    color:#fff;
}

