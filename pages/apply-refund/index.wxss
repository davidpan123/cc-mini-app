/* pages/apply-refund/index.wxss */
/* miniprogram/pages/login/login.wxss */
page{
    height: 100%;
}
.container{
    background-color: #F2f2f2;
    justify-content: initial;
}
/* 订单内容 */
.top-sec{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 20rpx 16rpx;
}
.top-sec .top-sec-pane {
    padding: 40rpx 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
}
.top-sec .a-row{
    display: flex;
    font-size: 24rpx;
    line-height: 54rpx;
    color: #666666;
}
.top-sec .a-row .label{
    margin-right: 28rpx;
}
.next {
  padding: 20rpx 0;
}
.money {
  color: #333;
  font-size: 30rpx;
}

/* 退款内容 */
.refund-pane {
  border-radius: 10rpx;
  width: 710rpx;
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}
.arrow-right {
  width: 20rpx;
  height: 20rpx;
  margin-left: 16rpx;
}
.refund-desc {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  color: #ff91a5;
  font-size: 20rpx;
}
.refund-content-title {
  margin: 30rpx 0;
}

.qustion-pane {
  padding: 30rpx 0 30rpx 30rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
}
.qustion-area {
  width: 100%;
  height: 180rpx;
}
.qustion-placeholder {
  font-size: 24rpx;
  color: #cccccc;
}

/* 联系人 */
.person-pane {
  margin-top: 16rpx;
  border-radius: 10rpx;
  width: 710rpx;
  background-color: #ffffff;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.row-item {
  height: 84rpx;
}

.save-btn{
    position: absolute;
    bottom: 14rpx;
    width: 710rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    border-radius: 34rpx;
    box-sizing: border-box;
    background-color: #ffaab9;
    color:#fff;
}

/* 原因模态框 */
.show-popup{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 4;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.title {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 30rpx;
  color:#999999;
}
.reason-list {
  padding: 0 24rpx;
}
.reason-row-item {
  padding: 30rpx 16rpx;
}
.select-img {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.buy-pane {
  margin-top: 40rpx;
  padding: 20rpx;
}
.buy-btn {
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ffffff;
  border-radius: 34rpx;
  background-color: #ff91a5;
}