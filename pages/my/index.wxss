/* pages/my/index.wxss */
page{
  height: 100%;
}
.container{
  background-color: #f3f3f3;
  justify-content: initial;
}
.header {
  width: 100%;
  background-color: #ffaab9;
  height: 420rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.avater {
  margin-top: 90rpx;
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid #ffffff;
  border-radius: 50%;
}
.avater-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.name {
  margin-top: 40rpx;
  font-size: 30rpx;
  color:#ffffff;
  font-weight: 600;
  text-align: center;
}
.address-pane {
  width: 710rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 40rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-top: -79rpx;
}
.address-pane-left .address {
  margin-top: 24rpx;
}
.phone {
  margin-left: 100rpx;
}
.address-pane-right {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: right;
}
.arrow {
  width: 20rpx;
  height: 20rpx;
} 
.order-container {
  margin-top: 20rpx;
  width: 710rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}
.order-container .order-header {
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-container .order-content {
  padding: 30rpx 39rpx;
}

.my-order-icon {
  width: 88rpx;
  height: 88rpx;
}

.desc-text {
  margin-top: 20rpx;
  text-align: center;
  font-size: 20rpx;
  color: #999999;
}
.footer {
  width: 710rpx;
  position: fixed;
  bottom: 20rpx;
}
